<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/fragment_main"
    >

    <include app:graph="@navigation/nav_graph_login" />
    <include app:graph="@navigation/nav_graph_spotify_music_player" />


    <fragment
        android:id="@+id/fragment_main"
        android:name="com.shamlu.spotify.ui.FragmentMain"
        android:label="Home"
        >

        <action android:id="@+id/fragment_main_to_fragment_login"
             app:destination="@+id/nav_graph_login"/>

        <action android:id="@+id/fragment_main_to_dialog_spotify_music_player"
            app:destination="@+id/nav_graph_spotify_music_player"/>
    </fragment>

</navigation>